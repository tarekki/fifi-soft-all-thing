# ============================================================================
# Django Environment Variables
# متغيرات البيئة لـ Django
# ============================================================================
# Copy this file to .env and fill in your actual values
# انسخ هذا الملف إلى .env واملأ القيم الفعلية

# ============================================================================
# Security Settings
# إعدادات الأمان
# ============================================================================

# Django Secret Key - REQUIRED
# مفتاح Django السري - مطلوب
# Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# Debug Mode - REQUIRED
# وضع التطوير - مطلوب
# In production: False
# In development: True
DEBUG=True

# Allowed Hosts - REQUIRED
# القائمة المسموح لها بالوصول (مفصولة بفواصل)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Database Configuration
# إعدادات قاعدة البيانات
# ============================================================================

# Database Name - REQUIRED
DB_NAME=trendyol_syria

# Database User - REQUIRED
DB_USER=postgres

# Database Password - REQUIRED (Use strong password in production)
DB_PASSWORD=your-secure-password-here

# Database Host
# For local: localhost
# For Docker: db
DB_HOST=localhost

# Database Port
DB_PORT=5432

# ============================================================================
# Docker Database URL (Optional - Alternative to DB_* variables)
# رابط قاعدة البيانات لـ Docker (اختياري)
# ============================================================================
# DATABASE_URL=postgresql://postgres:password@db:5432/trendyol_syria

# ============================================================================
# CORS Configuration
# إعدادات CORS
# ============================================================================
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
